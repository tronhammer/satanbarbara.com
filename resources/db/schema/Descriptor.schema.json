			"default": "",
			"placeholder": "awesome",
			"generator": "user",
			"required": true,
			"unique": true
		}, 
		"description": {
			"type": "string",
			"max": 4000,
			"name": "description",
			"label": "Description",
			"description": "",
			"default": "",
			"placeholder": "SO awesome!",
			"generator": "user"
		},
		"archived": {
			"type": "boolean",
			"name": "archived",
			"label": "Archived",
			"description": "",
			"default": 0,
			"placeholder": "0",
